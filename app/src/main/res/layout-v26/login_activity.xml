<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"

    android:orientation="vertical">
            <ImageView
                android:id="@+id/rectimage"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/rectangle_top"
                android:contentDescription="#" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="326dp"
                        android:contentDescription="#"
                        android:src="@drawable/img_login2"

                        />

                    <TextView
                        android:id="@+id/txtCicerone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"

                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="@string/Cicerone"
                        android:textColor="@color/orange"
                        android:textSize="50sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:id="@+id/text_input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/source_sans_pro"
                            android:autofillHints="@string/correo"
                            android:hint="@string/correo"
                            android:inputType="textEmailAddress"
                            android:textColor="#696969"
                            android:textColorHint="#AFAFAF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="1"
                            />


                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/source_sans_pro"
                            android:autofillHints="@string/Contraseña"
                            android:hint="@string/Contraseña"
                            android:inputType="textPassword"
                            android:textColor="#696969"
                            android:textColorHint="#AFAFAF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="1"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="50dp"
                        android:backgroundTint="@color/orange"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/source_sans_pro"
                        android:onClick="confirmInput"
                        android:src="@drawable/button_background"
                        android:text="@string/iniciar_sesion"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="38dp"
                            android:fontFamily="@font/source_sans_pro"
                            android:text="@string/olvidaste_tu_contraseña"
                            android:textColor="@color/orange"
                            android:textStyle="italic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="italic"
                            android:text="@string/es_parte_de_cicerone"
                            android:textColor="@color/orange"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="35dp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="italic"
                            android:text="@string/registrate"
                            android:textColor="@color/orange"
                            android:layout_marginHorizontal="35dp"
                            android:onClick="launchRegistryActivity"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



</LinearLayout>


