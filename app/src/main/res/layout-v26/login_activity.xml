<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"

    android:orientation="vertical">
    <ImageView
        android:id="@+id/rectimage"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/rectangle_top"
        android:contentDescription="#" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imglogin"
                            android:layout_width="match_parent"
                            android:layout_height="2in"
                            android:contentDescription="#"
                            android:src="@drawable/img_login2"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtCicerone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="@string/Cicerone"
                        android:textColor="@color/orange"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:id="@+id/text_input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etxt_correo_login"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:autofillHints="@string/correo"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="@string/correo"
                            android:inputType="textEmailAddress"
                            android:text="juanpa1099@hotmail.com"
                            android:textColor="#696969"
                            android:textColorHint="#AFAFAF"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            />


                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etxt_contrase単a_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/source_sans_pro"
                            android:autofillHints="@string/Contrase単a"
                            android:hint="@string/Contrase単a"
                            android:inputType="textPassword"
                            android:textColor="#696969"
                            android:textColorHint="#AFAFAF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="clave"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/orange"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/source_sans_pro"
                        android:onClick="confirmInput"
                        android:src="@drawable/button_background"
                        android:text="@string/iniciar_sesion"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/login_button_fb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="50dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/source_sans_pro"
                                android:text="@string/olvidaste_tu_contrase単a"
                                android:textColor="@color/orange"
                                android:textStyle="italic"
                                android:onClick="launch_get_email"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="20dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/source_sans_pro"
                                android:textStyle="italic"
                                android:text="@string/es_parte_de_cicerone"
                                android:textColor="@color/orange"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                />

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/source_sans_pro"
                                android:textStyle="italic"
                                android:text="@string/registrate"
                                android:textColor="@color/orange"
                                android:onClick="launchRegistryActivity"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="20dp"
                                android:layout_centerVertical="true"
                                />



                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>


