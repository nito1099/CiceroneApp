<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#D6D6D6"
        android:onClick="launchLoginFromAccount"
        />

    <TextView
        android:id="@+id/txtPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Catedral de Guadalajara"
        android:textColor="@color/orange"
        android:layout_marginLeft="15dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/imgPlace"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/img_catedral"
        android:rotation="90"

        />

        <TextView
            android:id="@+id/txtDescricpion"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="Catedral con sus agujas góticas\n gemelas se puede ver desde toda\n la ciudad. Es uno de los hitos más\nreconocibles. Esta hermosa\n catedral se encuentra en el centro\nhistórico y esta abierta todos los\ndías."
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>